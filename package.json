{
	"name": "fhir-json",
	"displayName": "FHIR JSON Tooling",
	"description": "Adds support for validation and some autocompletion of FHIR JSON files for VS Code",
	"publisher": "cqframework",
	"version": "0.0.1",
	"bugs": "https://github.com/cqframework/vscode-fhir-json/issues",
	"engines": {
		"vscode": "^1.60.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cqframework/vscode-fhir-json"
	},
	"icon": "icons/cqframework.png",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:ig.ini"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands":[
			{ "command": "ig.refresh", "title": "Refresh IG" },
			{ "command": "ig.updateCQFTooling", "title": "Update CQF Tooling" },
			{ "command": "ig.genonce", "title": "Generate IG" },
			{ "command": "ig.updatePublisher", "title": "Update Publisher" }
		],
		"menus": {
			"explorer/context": [
				{
					"command": "ig.refresh",
					"when": "explorerViewletVisible",
					"group": "igActions"
				},
				{
					"command": "ig.updateCQFTooling",
					"when": "explorerViewletVisible",
					"group": "igActions"
				},
				{
					"command": "ig.genonce",
					"when": "explorerViewletVisible",
					"group": "igActions"
				},
				{
					"command": "ig.updatePublisher",
					"when": "explorerViewletVisible",
					"group": "igActions"
				}
			]
		},
		"jsonValidation": [
			{
				"fileMatch": "*.json",
				"url": "fhirjson://schema"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p . --outDir out",
		"pretest": "npm run test-compile && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"jsonc-parser": "^3.0.0"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3",
		"ts-loader": "^9.2.5",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.8.0",
		"@vscode/test-electron": "^1.6.2"
	}
}
